{
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ]
    },
    "env": {
        "browser": true
    },
    "globals": {
        "Game": true,
        "GameScreen": true,
        "InputManager": true,
        "MainMenuScreen": true,
        "Map": true,
        "Player": true,
        "Pointer": true,
        "ROT": true,
        "ScreenManager": true,
        "TinyTale": true
    },
    "extends": "eslint:recommended"
}
